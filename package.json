{
  "name": "ecodewhisper",
  "displayName": "ECodeWhisper",
  "description": "Eager Code Whisper - Real-time voice-to-text for Cursor/VS Code with WhisperLive WebSocket streaming and TEN VAD. Text appears as you speak.",
  "version": "0.3.2",
  "publisher": "damvolkov",
  "author": {
    "name": "damvolkov",
    "email": "damvolkovv@gmail.com"
  },
  "license": "MIT",
  "icon": "images/codewhisper.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/damvolkov/e-codewhisper.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "voice",
    "speech",
    "transcription",
    "whisper",
    "faster-whisper",
    "vad",
    "voice-activity-detection",
    "websocket",
    "streaming",
    "realtime"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ecodewhisper.toggleRecording",
        "title": "ECodeWhisper: Toggle Recording"
      },
      {
        "command": "ecodewhisper.cancelRecording",
        "title": "ECodeWhisper: Cancel Recording"
      }
    ],
    "keybindings": [
      {
        "command": "ecodewhisper.toggleRecording",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "ecodewhisper.cancelRecording",
        "key": "escape",
        "when": "ecodewhisper.isRecording"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ECodeWhisper Settings",
      "properties": {
        "ecodewhisper.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter (requires Python 3.12+)"
        },
        "ecodewhisper.whisperEndpoint": {
          "type": "string",
          "default": "ws://localhost:9090",
          "description": "WebSocket endpoint for WhisperLive server (ws:// or wss://)"
        },
        "ecodewhisper.model": {
          "type": "string",
          "default": "",
          "description": "Whisper model to use (e.g., 'small', 'large-v3', 'Systran/faster-whisper-large-v3'). Leave empty to use server default."
        },
        "ecodewhisper.language": {
          "type": "string",
          "default": "en",
          "description": "Language code for transcription (e.g., 'en', 'es', 'fr'). Leave empty for auto-detection."
        },
        "ecodewhisper.vadSilenceThreshold": {
          "type": "number",
          "default": 1.5,
          "minimum": 0.3,
          "maximum": 10,
          "description": "Seconds of silence before VAD stops recording automatically (0.3-10s)"
        },
        "ecodewhisper.vadThreshold": {
          "type": "number",
          "default": 0.5,
          "minimum": 0.1,
          "maximum": 0.9,
          "description": "VAD probability threshold for voice detection (0.1-0.9)"
        },
        "ecodewhisper.sampleRate": {
          "type": "number",
          "default": 16000,
          "enum": [16000],
          "description": "Audio sample rate (16kHz required for TEN VAD)"
        },
        "ecodewhisper.autoInsert": {
          "type": "boolean",
          "default": true,
          "description": "Automatically insert transcription at cursor position"
        },
        "ecodewhisper.streamingInsert": {
          "type": "boolean",
          "default": true,
          "description": "Insert text in real-time as you speak (on the fly transcription)"
        },
        "ecodewhisper.showPartialResults": {
          "type": "boolean",
          "default": true,
          "description": "Show partial transcription results while speaking"
        },
        "ecodewhisper.minRecordingTime": {
          "type": "number",
          "default": 1.0,
          "minimum": 0.5,
          "maximum": 5,
          "description": "Minimum recording time in seconds before VAD can stop (prevents instant stops)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "compile-tests": "tsc -p ./tsconfig.test.json",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run compile-tests",
    "test": "node ./out/test/runTest.js",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.0"
  }
}
